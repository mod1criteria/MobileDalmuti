{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Dalmuti server",
            "type": "node",
            "request": "launch",
            "program": "${workspaceFolder}/dist/server.js",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "node",
            "envFile": "${workspaceFolder}/.env",
            "env": {
                "PORT": "3000"
            },
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ],
            "preLaunchTask": "tsc: build dalmuti server",
            "console": "integratedTerminal",
            "restart": true
        },
        {
            "name": "Attach Dalmuti server",
            "type": "node",
            "request": "attach",
            "processId": "${command:PickProcess}",
            "restart": true,
            "outFiles": [
                "${workspaceFolder}/dist/**/*.js"
            ]
        }
    ]
}