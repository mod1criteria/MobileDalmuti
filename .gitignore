client_unity/Assets/AssetStoreTools*
client_unity/*.csproj
client_unity/*.unityproj
client_unity/*.sln
client_unity/*.user
client_unity/*.pidb
client_unity/*.booproj

# Ignore local IDE settings

.idea/

# Backup / Cache
*.bak
*.patch
*.orig
*.cache
